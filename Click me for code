import random

loop = 0

while loop == 0:
  ask_player = input("Do you want to flip the coin? *yes or no* ")

  if ask_player == "yes":
    coinflip = random.randint(1 , 2)
    if coinflip == 1:
      print("heads")
    else:
      print("tails")

  elif ask_player == "no":
    print("The coinflip simulation is ending")
    loop = 1

  else:
    print("Please only type yes or no")
